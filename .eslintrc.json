{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "standard"
  ],
  "plugins": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "reports/**/*",
    "node_modules/**/*"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-extra-semi": "off",
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
